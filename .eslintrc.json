{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": 2021 // Specify the ECMAScript version to support modern syntax
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "no-console": "off"
  }
}
